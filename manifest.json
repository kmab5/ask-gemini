{
    "manifest_version": 3,
    "name": "Ask Gemini",
    "version": "1.0.1",
    "description": "Quickly find out what highlighted text means by asking Gemini AI",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/logox16.png",
            "32": "icons/logox32.png",
            "48": "icons/logox48.png",
            "128": "icons/logox128.png"
        }
    },
    "icons": {
        "16": "icons/logox16.png",
        "32": "icons/logox32.png",
        "48": "icons/logox48.png",
        "128": "icons/logox128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/geminix32.png",
                "icons/geminix16.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "styles.css"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}